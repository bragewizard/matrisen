#version 460
#extension GL_EXT_mesh_shader : require

layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;
layout(triangles) out;
layout(max_vertices = 6, max_primitives = 2) out;

void main() {
    // Set meshlet properties
    SetMeshOutputsEXT(6, 2); // 6 vertices and 2 primitives (triangles)

    // Define the vertices of the first triangle
    gl_MeshVerticesEXT[0].gl_Position = vec4(-0.5, -0.5, 0.0, 1.0); // Bottom-left
    gl_MeshVerticesEXT[1].gl_Position = vec4(0.5, -0.5, 0.0, 1.0);  // Bottom-right
    gl_MeshVerticesEXT[2].gl_Position = vec4(0.0, 0.5, 0.0, 1.0);   // Top-center

    // Define the vertices of the second triangle
    gl_MeshVerticesEXT[3].gl_Position = vec4(-0.8, 0.8, 0.0, 1.0);  // Top-left
    gl_MeshVerticesEXT[4].gl_Position = vec4(0.5, 0.5, 0.0, 1.0);   // Top-right
    gl_MeshVerticesEXT[5].gl_Position = vec4(0.0, -0.8, 0.0, 1.0);  // Bottom-center

    // Define the primitives (two triangles)
    gl_PrimitiveTriangleIndicesEXT[0] = uvec3(0, 1, 2); // First triangle
    gl_PrimitiveTriangleIndicesEXT[1] = uvec3(3, 4, 5); // Second triangle
}
